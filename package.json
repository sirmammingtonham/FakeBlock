{
	"private": true,
	"scripts": {
		"clean": "rm -rf dist",
		"build": "webpack --mode=development",
		"scripts": "tsc scripts/run-scripts.ts --outDir dist/scripts && node dist/scripts/run-scripts.js",
		"lint": "run-p lint:*",
		"lint-fix": "run-p 'lint:* -- --fix'",
		"lint:css": "stylelint style/**/*.scss --fix",
		"lint:js": "xo --fix",
		"release:chrome": "cd dist && webstore upload --auto-publish",
		"release:firefox": "cd dist && web-ext-submit",
		"test": "run-s lint:* build",
		"watch": "webpack --mode=development --watch"
	},
	"engines": {
		"node": ">=13.0.0 <14.0.0"
	},
	"xo": {
		"ignores": [
			"dist"
		],
		"rules": {
			"camelcase": [
				"error",
				{
					"properties": "always"
				}
			],
			"capitalized-comments": [
				"off"
			],
			"@typescript-eslint/restrict-template-expressions": [
				"off"
			]
		},
		"settings": {
			"import/resolver": {
				"node": {},
				"webpack": {}
			}
		}
	},
	"stylelint": {
		"extends": "stylelint-config-xo"
	},
	"dependencies": {
		"@material-ui/core": "^4.11.3",
		"@material-ui/icons": "^4.11.2",
		"@tensorflow/tfjs": "^3.3.0",
		"@types/jest": "^26.0.22",
		"jquery": "^3.6.0",
		"node-sass": "^5.0.0",
		"prop-types": "^15.7.2",
		"react": "^17.0.1",
		"react-dom": "^17.0.1",
		"react-router-dom": "^5.2.0",
		"tabler": "^1.0.0-alpha.8",
		"tabler-react": "^2.0.0-alpha.1",
		"webext-options-sync": "^2.0.1",
		"webextension-polyfill": "^0.7.0",
		"webextension-polyfill-ts": "^0.24.0"
	},
	"devDependencies": {
		"@types/firefox-webext-browser": "^82.0.0",
		"@types/jquery": "^3.5.5",
		"@types/react": "^17.0.2",
		"@types/react-dom": "^17.0.1",
		"axios": "^0.21.1",
		"chrome-webstore-upload-cli": "^1.2.0",
		"clean-webpack-plugin": "^3.0.0",
		"copy-webpack-plugin": "^5.0.3",
		"css-loader": "^5.1.0",
		"eslint": "^7.14.0",
		"html-webpack-plugin": "^5.2.0",
		"jest": "^26.6.3",
		"mini-css-extract-plugin": "^1.3.9",
		"npm-run-all": "^4.1.5",
		"sass-loader": "^11.0.1",
		"size-plugin": "^1.2.0",
		"stylelint": "^13.11.0",
		"stylelint-config-xo": "^0.15.0",
		"terser-webpack-plugin": "^1.3.0",
		"ts-jest": "^26.5.4",
		"ts-loader": "^8.0.17",
		"typescript": "^4.2.2",
		"web-ext": "^5.5.0",
		"web-ext-submit": "^5.5.0",
		"webpack": "^5.24.2",
		"webpack-cli": "^4.5.0",
		"xo": "^0.38.1"
	}
}
